generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified Boolean   @default(false)
  image         String?
  role          Role      @default(USER)
  profile_id    String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]
  profile       Profile?  @relation("UserProfile", fields: [profile_id], references: [id])

  @@index([profile_id])
  @@index([role])
}

model Profile {
  id                 String   @id @default(cuid())
  name               String
  stripe_customer_id String?  @unique
  userType           UserType
  org_name           String?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  users              User[]   @relation("UserProfile")

  @@index([userType])
}

model Account {
  id                    String    @id @default(cuid())
  userId                String
  providerId            String    @map("provider")
  accountId             String    @map("providerAccountId")
  accessToken           String?   @map("access_token")
  refreshToken          String?   @map("refresh_token")
  accessTokenExpiresAt  DateTime? @map("expires_at")
  refreshTokenExpiresAt DateTime?
  scope                 String?
  idToken               String?   @map("id_token")
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, accountId])
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime @map("expires")
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([identifier, value])
  @@map("VerificationToken")
}

enum Role {
  ADMIN
  USER
}

enum UserType {
  INDIVIDUAL
  ORGANIZATION
}