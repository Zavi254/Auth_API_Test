generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified Boolean   @default(false)
  image         String?
  role          Role      @default(USER)
  profile_id    String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]
  profile       Profile?  @relation("UserProfile", fields: [profile_id], references: [id])

  @@index([profile_id])
  @@index([role])
}

model Profile {
  id                 String   @id @default(cuid())
  name               String
  stripe_customer_id String?  @unique
  userType           UserType
  org_name           String?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  subscriptions      Subscription[]
  users              User[]   @relation("UserProfile")

  @@index([userType])
}

model Subscription {
  id                       String             @id @default(cuid())
  profile_id               String
  stripe_subscription_id   String?            @unique
  plan_name                PlanName
  status                   SubscriptionStatus
  start_date               DateTime?
  trial_end                DateTime?
  current_period_end       DateTime?
  cancel_at                DateTime?
  cancel_at_period_end     Boolean            @default(false)
  billing_interval         BillingInterval?
  no_of_licenses           Int                @default(1)
  createdAt                DateTime           @default(now())
  updatedAt                DateTime           @updatedAt
  last_3day_reminder_sent  DateTime?
  last_1day_reminder_sent  DateTime?
  pending_billing_interval BillingInterval?
  pending_seats            Int?
  profile                  Profile            @relation(fields: [profile_id], references: [id], onDelete: Cascade)

  @@index([profile_id])
  @@index([status])
  @@index([current_period_end])
  @@index([plan_name])
}

model Account {
  id                    String    @id @default(cuid())
  userId                String
  providerId            String    @map("provider")
  accountId             String    @map("providerAccountId")
  accessToken           String?   @map("access_token")
  refreshToken          String?   @map("refresh_token")
  accessTokenExpiresAt  DateTime? @map("expires_at")
  refreshTokenExpiresAt DateTime?
  scope                 String?
  idToken               String?   @map("id_token")
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, accountId])
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime @map("expires")
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([identifier, value])
  @@map("VerificationToken")
}

enum Role {
  ADMIN
  USER
}

enum UserType {
  INDIVIDUAL
  ORGANIZATION
}

enum PlanName {
  FREE_ESIGN @map("Free eSign")
  ESIGN      @map("eSign")
  EDMS_PLUS  @map("EDMS+")
}

enum BillingInterval{
  month
  year
}

enum SubscriptionStatus {
  incomplete
  incomplete_expired
  trialing
  active
  past_due
  canceled
  unpaid
}